@model WebSite.Models.Fa_Cashier.AccountViewModel
@using HyBy.Trading.BusinessEntity


<div class="ui_toptable j_outerheight">
    <table class="headtable wb100" id="headtable" cellpadding="0" cellspacing="0">
        <thead>
            <tr class="bdBottom">
                @*<th width="10%">序</th>*@
                <th width="16%">操作时间</th>
                <th width="16%">金额</th>
                <th width="16%">账户余额</th>
                <th width="16%">凭证号</th>
                <th width="16%">订单号</th>
                <th width="20%">备注</th>
            </tr>
        </thead>
    </table>
</div>
<div class="tableshow" id="j_scrollbox">
    <table id="minshowtable" class="wb100 txtCenter ui_bottomtab" cellpadding="0" cellspacing="0">
        <tbody>
            @if (Model.accountRecordList == null || Model.accountRecordList.Count <= 0)
            {
                <tr>
                    <td colspan="4">暂无数据</td>
                </tr>
            }
            else
            {
                foreach (var item in Model.accountRecordList)
                {
                    <tr class="target_tr">
                        @*<td width="10%">@item.ID</td>*@
                        <td width="16%">@item.CreateDate</td>
                        <td width="16%">@item.Account</td>
                        <td width="16%">@item.AccountBalance</td>
                        <td width="16%">@item.VoucherCode</td>
                        <td width="16%">@item.OrderID</td>
                        <td width="20%">@item.Remark</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script type="text/javascript" src="~/Scripts/js/jquery-1.8.3.min.js"></script>
<script type="text/javascript" src="~/Scripts/js/rxued.js"></script>

<script type="text/javascript">

    //含多个iframe的页面的计算高度
    function init() {
        rxued.table.countTB($('#headtable'), $('#minshowtable'), $(".tableshow"));
    }

    $(function () {

        //计算高度和宽度
        $(window).load(function () {
            init();
        });
        $(window).resize(function () {
            init();
        })
    })

</script>
